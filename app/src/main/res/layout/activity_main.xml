<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <net.skyscanner.backpack.card.BpkCardView
        android:id="@+id/itineraryCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:bpkCardCornerStyle="large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <net.skyscanner.backpack.text.BpkText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flight information"
                style="@style/bpkTextHeading1" />

            <net.skyscanner.backpack.text.BpkText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Flight SK492"
                style="@style/bpkTextBodyDefault" />

            <net.skyscanner.backpack.card.BpkCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:bpkCardCornerStyle="large">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <net.skyscanner.backpack.text.BpkText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Departure"
                        style="@style/bpkTextHeading4" />

                    <net.skyscanner.backpack.text.BpkText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="LHR"
                        style="@style/bpkTextHeading2" />

                    <net.skyscanner.backpack.text.BpkText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="08:30"
                        style="@style/bpkTextBodyDefault" />
                </LinearLayout>
            </net.skyscanner.backpack.card.BpkCardView>

            <net.skyscanner.backpack.card.BpkCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:bpkCardCornerStyle="large">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <net.skyscanner.backpack.text.BpkText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Arrival"
                        style="@style/bpkTextHeading4" />

                    <net.skyscanner.backpack.text.BpkText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="JFK"
                        style="@style/bpkTextHeading2" />

                    <net.skyscanner.backpack.text.BpkText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11:10"
                        style="@style/bpkTextBodyDefault" />
                </LinearLayout>
            </net.skyscanner.backpack.card.BpkCardView>

        </LinearLayout>
    </net.skyscanner.backpack.card.BpkCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
